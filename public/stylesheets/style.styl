/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  font-size 25px
  padding 0
  background-color white //main-color 
  //text-align center
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
 
  .left-header
    width 400px
    float left
    color red
    font-size 40px
    padding 20px 10px 20px 150px
    em
      font bold
  
  .right-header
    width 400px
    color rgb(123 184 20)
    font-size 20px
    padding-top 45px
    padding-right 55px
    text-align right
    float right

.container
  width 100%
  margin 0px 20px auto
  overflow hidden

  .main-content
    float left    
    margin-right 30px
    padding 10px 50px 30px 100px

  .side-content
    width 20%
    float right
    background-color blue

.nav
  width 100%
  float right
  margin 0 0 3em 0
  padding 0px
  list-style none
  background-color rgb(128 184 20)
  padding-right 20px

  li
    float right
    
  a
    display block
    padding 20px 20px 20px
    text-decoration none
    font-size 20px
    color white //#069
    &:visited
      background-color white
    &:hover
      //color #c00
      background-color white
      color rgb(123 184 20)
    &:active    
      background-color white
      color red
            
.sidebar
  float left
  width 20%

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 100%
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  text-align center